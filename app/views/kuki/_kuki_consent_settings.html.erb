<h4>
  <%= I18n.t('cookie_consent.external_content_and_cookie_settings') %>

  <span class="<%= cookies[:cookieconsent_status] == 'allow' ? 'badge badge-success' : 'badge badge-danger' %>">
    <%= I18n.t("cookie_consent.status.#{cookies[:cookieconsent_status] || 'deny'}") %>
  </span>
</h4>

<div class="row mt-3">
  <div class="col-md-3">
    <a href="" class="deny-cookie-consent btn btn-secondary btn-block"><%= I18n.t('cookie_consent.revoke_consent') %></a>
  </div>
  <div class="col-md-3">
    <a href="" class="allow-cookie-consent btn btn-primary btn-block"><%= I18n.t('cookie_consent.accept_consent') %></a>
  </div>
</div>